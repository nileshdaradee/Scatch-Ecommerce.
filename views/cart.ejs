<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <% products.forEach(function(product){ %>
        
            <div class="w-[30%] rounded-md overflow-hidden">
            <div class="w-full h-80 bg-[<%= product.bgcolor %>]">
                <img class="object-contain h-48 w-48" src="data:<%= product.contentType %>;base64,<%= product.data.toString('base64') %>" alt="<%= product.name %>">
            </div>
            <div class="w-full flex justify-between px-5 py-4">
                <h3 class="text-2xl"><%= product.name %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-yellow-900 flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-yellow-900 text-black"><%= product.quantity %></div>
                    <i class="w-7 h-7 bg-blue-1000 flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ 1200</h2>
            </div>
        </div>
        <% }) %>
        
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>1299</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ 0</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ 1940</h3>
            </div>
            <form action=""></form>
        </div>

        
    </div>
    <%- include('./partials/footer') %>


